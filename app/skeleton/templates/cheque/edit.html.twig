{% extends 'base.html.twig' %}

{% block title %}Edit Cheque{% endblock %}

{% block body %}
    <h1>Редактирование чека</h1>

    {{ include('cheque/_form.html.twig', {'button_label': 'Update'}) }}
    {{ form_start(form) }}

    <h3>Продукты</h3>
    <ul class="products">
        {% for p in form.products %}
            <li>{{ p }}</li>
        {%  endfor %}
    </ul>
    {{ form_end(form) }}
    <a href="{{ path('app_cheque_index') }}">back to list</a>

    {{ include('cheque/_delete_form.html.twig') }}
{% endblock %}
