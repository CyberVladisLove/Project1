<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        <link rel="stylesheet" href="multiple-select.css" />
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script>
                $(function() {
                    $('#ms').change(function() {
                        console.log($(this).val());
                    }).multipleSelect({
                        width: '100%'
                    });
                });
            </script>
        {% endblock %}

    </head>
    <body>

    <div class="navbar">
        <a href="{{ path('app_party_index') }}">Тусовки</a>
        <a href="{{ path('app_guest_index') }}">Гости</a>
        <a href="{{ path('app_product_index') }}">Продукты</a>
        <a href="{{ path('app_payment_index') }}">Платежи</a>
        <a href="{{ path('app_cheque_index') }}">Чеки</a>
        <a href="{{ path('app_user_index') }}">Пользователи</a>
        <a href="{{ path('app_login') }}"style="color: #23bf5d">Логин</a>
        <a href="{{ path('app_account') }}"style="color: #23bf5d">Личный кабинет</a>

    </div>


    <div class="form_container">
        {% block form_body %}

        {% endblock %}
    </div>
    {% block body %}

    {% endblock %}
    </body>

    <style>
        .navbar{
            width: 50%;
            font-size:25px;
            margin: 5px auto;
        }
        .navbar a{
            transition: 0.3s;
        }
        .navbar a:hover{
            transform: scale(1.05);
        }
        .table{
            font-size:25px;
            padding: 25px;
            margin: 20px auto;
            width: 80%;
        }
        .form_container{
            margin: 25px auto;
            width: max-content;
        }
        .container{
            margin: 25px;
            width: 100%;
        }
        h1{
            width: max-content;
            margin: 25px auto;
        }
        .btn_create{
            width: max-content;
            margin: 0 25px;
            font-size: 25px;
        }
        .btn-delete{
            background-color: #FFAA94;
        }
        .input{
            margin: 5px;
            width: max-content;
        }
        td{
            width: max-content;
        }
        label{
            margin: 5px;
        }
        form{
            width: max-content;
            margin: 0 auto;
        }
        button{
            border-radius: 7px/7px;
            transition: 0.3s;
            margin: 5px;

        }
        button:hover{
            background-color: #cacaca;
            cursor: pointer;
        }
        a:hover{
            text-decoration: none;
        }
        .form_input{
            border: #6E6E6E;
            border-radius: 4px/4px;
        }
    </style>
</html>
