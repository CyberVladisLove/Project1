{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Платеж</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ payment.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">назад к списку</a>

    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">изменить</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
