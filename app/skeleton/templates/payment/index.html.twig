{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Платежи</h1>
    <button class="btn_create" >
        <a href="{{ path('app_payment_new') }}">Создать</a>
    </button>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Дата</th>
                <th>Сумма</th>
                <th>Отправитель</th>
                <th>Получатель</th>
                <th>Автор</th>
                <th>Действия</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payment.value }}</td>
                <td>{{ payment.fromGuest }}</td>
                <td>{{ payment.toGuest }}</td>
                <td>{{ payment.author }}</td>
                <td>
                    <button style="margin: 5px">
                        <a href="{{ path('app_payment_show', {'id': payment.id}) }}">открыть</a>
                    </button>
                    <button style="margin: 5px">
                        <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">изменить</a>
                    </button>

                </td>
                <td>
                    {{ include('payment/_delete_form.html.twig') }}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
