{% extends 'base.html.twig' %}

{% block title %}Party{% endblock %}

{% block body %}
    <h1>Тусовка</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ party.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ party.name }}</td>
            </tr>
            <tr>
                <th>DateAt</th>
                <td>{{ party.dateAt ? party.dateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ party.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_party_index') }}">назад к списку</a>

    <a href="{{ path('app_party_edit', {'id': party.id}) }}">изменить</a>

    {{ include('party/_delete_form.html.twig') }}
{% endblock %}
